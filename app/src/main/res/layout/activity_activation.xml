<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackground"
    android:orientation="vertical"
    tools:context=".ActivationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/logo"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activation"
            android:textColor="#ffffff"
            android:layout_gravity="start"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"
            android:textSize="34sp"/>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/latinregpos"-->
        <!--android:layout_gravity="start"-->
        <!--android:paddingLeft="40dp"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="15sp"/>-->


        <LinearLayout
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/activation_code"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_activation"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:padding="10dp"
                android:ems="10"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColorHint="#ffffff"
                android:layout_marginBottom="15dp"
                android:paddingStart="20dp"
                android:textSize="20sp"
                android:singleLine="true"
                android:imeOptions="actionSend"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/newbuttonnext"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/resend_code"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/link" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>